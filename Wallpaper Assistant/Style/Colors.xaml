<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Colors.Background.Header" Color="#FF3C3C3C"/>
    <SolidColorBrush x:Key="Colors.Background.Body" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="Colors.Background.Footer" Color="#FF252526"/>

    <SolidColorBrush x:Key="Button.Footer.Static.Background" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="Button.Footer.Static.Foreground" Color="#FF828282"/>
    <SolidColorBrush x:Key="Button.Footer.MouseOver.Background" Color="#FF252525"/>
    <SolidColorBrush x:Key="Button.Footer.MouseOver.Foreground" Color="#FFC0C0C0"/>
    <SolidColorBrush x:Key="Button.Footer.Pressed.Background" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="Button.Footer.Pressed.Foreground" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="Colors.Header.Foreground" Color="#FFBABABA"/>

    <SolidColorBrush x:Key="Button.Header.Static.Background" Color="#FF3C3C3C"/>
    <SolidColorBrush x:Key="Button.Header.Static.Foreground" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="Button.Header.MouseOver.Background" Color="#FF505050"/>
    <SolidColorBrush x:Key="Button.Header.Pressed.Background" Color="#FF505050"/>
</ResourceDictionary>
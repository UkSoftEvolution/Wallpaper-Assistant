<Window x:Class="Wallpaper_Assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wallpaper Assistant" Height="500" Width="300" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{x:Null}" Foreground="{x:Null}">
    <Grid Opacity="0.95">
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <!--HEADER-->
        <Grid Grid.Row="0" Background="{StaticResource Colors.Background.Header}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBlock
                    Style="{DynamicResource Header Caption}"
                    Text="Wallpaper Assistant"/>
            </Grid>
            
            <Grid Grid.Column="1">
                <Button x:Name="Close" Style="{DynamicResource Header Button}">
                    <Viewbox Width="12" Height="12">
                        <Canvas Width="24" Height="24">
                            <Path
                                Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                Fill="{Binding ElementName=Close, Path=Foreground}"/>
                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>
        </Grid>

        <!--BODY-->
        <Grid Grid.Row="1" Background="{StaticResource Colors.Background.Body}">
            <Frame
                NavigationUIVisibility="Hidden"
                Margin="0 3 0 0"
                Content="{Binding PageActive}"/>
        </Grid>

        <!--FOOTER-->
        <Grid Grid.Row="2" Background="{StaticResource Colors.Background.Footer}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Notify" ToolTip="Оповещения" Style="{DynamicResource FooterButton}">
                    <Viewbox Width="48" Height="48">
                        <Canvas Width="24" Height="24">
